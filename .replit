modules = ["python-3.11", "web", "nodejs-20", "bash"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "postgresql", "sqlite", "tcl", "tk", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flask_app"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "flask_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add reportlab qrcode[pil] pillow"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34973
externalPort = 3000

[[ports]]
localPort = 37513
externalPort = 3002

[[ports]]
localPort = 46835
externalPort = 3001

[agent]
